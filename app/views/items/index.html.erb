    
    <!-- Itens index-->
    <h5 class="fs-3 text-center">Items</h5>

    <section>
      
      <%= bootstrap_form_with url: "/items", method: :get do |form| %>
        <div class="col">
          <%= form.text_field :query, label: ".", 
          placeholder: "Pesquisar por: código do item ou descricção"%>
          
          <div class="d-grid gap-2 my-1">
            <%= form.submit "Search" %> 
          </div>
        </div>
      <% end %>
 
      <table class="table table-hover shadow-sm">
          <thead>
            <tr>
              <th scope="col">Código</th>
              <th scope="col">Nome/Descrição</th>
              <th scope="col">Q.Stock</th>
              <th scope="col">Taxa</th>
              <th scope="col">P.Unitário</th>
              <th scope="col">Categoria</th>
              <th scope="col">Sector</th>
              <th scope="col">V.Pagar</th>
              <th scope="col">Lucro</th>
              <th scope="col">Fornecedor</th>
              <th scope="col">Profile</th>
              <th scope="col">D.Cadastro</th>
              <th scope="col">D.Fabricação</th>
              <th scope="col">D.Expiracao</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
              <div id="items">
                <% @items.each do |item| %>
                 <tr>
                  <%= render item %>
                 </tr>
                <% end %>
              </div>
          </tbody>
        </table>
        <% if @items.empty? %>
          <p class="fs-2 text-success text-center">
            No items found.
          </p>
        <% end %>

        <div >
          <%= paginate @items, window: 2 %>
        </div>
           
      <%= bootstrap_form_with url: "/items/import_exel", method: :post do |form| %>
        <div class="col">
          <div class="d-grid gap-2 my-1">
            <%= form.file_field :file %>
            <%= form.submit "Importar arquivo exel.", class:"btn btn-outline-danger" %> 
          </div>
        </div>
      <% end %>

    </section>

    <!-- Fim Itens index-->


