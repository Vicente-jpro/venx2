
<div class="container py-3" >
  <div class="col" id="plans">
    <div class=" text-end">
      <%= link_to "New plan", new_plan_path, class:"link-primary"%>
    </div>    
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3">
        <h4 class="my-0 fw-normal text-center"><%= @plan.name_plans %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title text-center text-pink"><%= @plan.price %><small class="text-muted fw-light">/mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4 text-primary-emphasis">
          <li><%= @plan.description %></li>
          <br>
         
        </ul>
        <div>
          <%= link_to "Edit this plan", edit_plan_path(@plan) , class:"w-100 btn btn-lg btn-outline-primary mb-2"%>
          <%= button_to "Destroy this plan", @plan, method: :delete, 
            data: { confirm: "Está ação irá eliminar este plano selecionado. Deseja continuar?", 
             turbo_confirm: "Está ação irá eliminar este plano selecionado. Deseja continuar?" }, 
             class: "w-100 btn btn-lg btn-outline-danger" %>
       </div>
     
      </div>
    </div>
  </div>
</div>

   
