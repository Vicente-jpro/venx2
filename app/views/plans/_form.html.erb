
 <div class="container col-lg-6 my-4">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
          <%= bootstrap_form_with(model: plan) do |form| %>
            <% if plan.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

                <ul>
                  <% plan.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= form.date_field :sign_date %>
            <%= form.date_field :expiration_date %>

            <%= form.collection_select :company_id, Company.order(:name), :id, :name, 
            { label: Company.model_name.human(count: 1) }, 
            {class:"text-light-emphasis"} %> 


            <div class="mb-3 d-grid gap-2">
              <%= form.submit class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
    </div>
 </div>
